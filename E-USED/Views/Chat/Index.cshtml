

<div class="container-fluid h-100">
	<div class="row d-flex  justify-content-around align-items-center h-100">
		<div class="col-md-4 col-xl-3 chat ">
			<h1> Friends</h1>
			@* List of Users *@
		    <div class="card mb-sm-3 mb-md-0 contacts_card">

			<div class="card-header">
			<div class="input-group">
			<input type="text" placeholder="Search..." name="" class="form-control search">
			<div class="input-group-prepend">
			<span class="input-group-text search_btn"><i class="fas fa-search"></i></span>
			</div>
			</div>
			</div>

			<div class="card-body contacts_body">
			<ui class="contacts">


			@foreach (var user in ViewBag.UsersId)
             {
				<a asp-controller="Chat" asp-action="DisplayChat" asp-route-userId="@user.Id">
			<li>
			  <div class="d-flex bd-highlight">
			  <div class="img_cont">
               <img src=@user.ImgPath class="rounded-circle user_img">
			   @if(user.IsActive)
			  {
				  <span class="online_icon online"></span> 
			  }
			  else 
			  {
                 <span class="online_icon offline"></span> 
			  }
			  </div>
			  <div class="user_info">
             <span>@user.FirstName @user.LastName</span>
			@* <p>Taherah left 7 mins ago</p> *@
			</div>
			</div>
			</li>
                 </a>
			}

			</ui>
			</div>
			<div class="card-footer"></div>
			</div> 
			@* End of List *@


		</div>



		@* List of Groups *@
		<div class="col-md-4 col-xl-3 chat ">

			<h1>Groups</h1>
			<div class="card mb-sm-3 mb-md-0 contacts_card">

				<div class="card-header">
					<div class="input-group">
						<input type="text" placeholder="Group name..." id="group-name" name="" class="form-control search">
						<div class="input-group-prepend" id="add-group">
							<span class="input-group-text search_btn"><i class="bi bi-plus-square"></i>Add</i></span>
						</div>
					</div>
				</div>

				<div class="card-body contacts_body">
					<ui class="contacts " id="group-list">

						<input type="hidden" id="username" value="@ViewBag.UserNeme" />
						@foreach (var user in ViewBag.UsersId)
						{
							<a asp-controller="Chat" asp-action="DisplayChat" asp-route-userId="@user.Id">
							<li>
								<div class="d-flex bd-highlight">
									<div class="img_cont">
										<img src="\Images\group.png" class="rounded-circle user_img">
											@if (user.IsActive)
											{
											<span class="online_icon online"></span>
											}
											else
											{
											<span class="online_icon offline"></span>
											}
									</div>
									<div class="user_info">
										<span>@user.FirstName @user.LastName</span>
											@* <p>Taherah left 7 mins ago</p> *@
									</div>
								</div>
							</li>
							</a>
						}
						
					</ui>
				</div>
				<div class="card-footer"></div>
			</div>
			
		</div>
		@* End of List *@




	</div>
</div>

