@model E_USED.Dtos.GroupChatDto


<div class="container-fluid h-100">
	<div class="row justify-content-center h-100">

		<div class="col-md-8 col-xl-6 chat">
			<div class="card">
				<div class="card-header msg_head">
					<div class="d-flex bd-highlight">

						<div class="img_cont">
							<img src="/Images/group.png" class="rounded-circle user_img">
							<span class="online_icon online"></span>
						</div>

						<div class="user_info">
							<span> @Model.GroupName </span>
							@* <p> @Model.MessageCount Messages</p> 
 *@						</div>
						<div class="video_cam">
							<span><i class="fas fa-video"></i></span>
							<span><i class="fas fa-phone"></i></span>
						</div>
					</div>
					<span id="action_menu_btn"><i class="fas fa-ellipsis-v"></i></span>
					<div class="action_menu">
						<ul>
							<li><i class="fas fa-user-circle"></i> View profile</li>
							<li><i class="fas fa-users"></i> Add to close friends</li>
							<li><i class="fas fa-plus"></i> Add to group</li>
							<li><i class="fas fa-ban"></i> Block</li>
						</ul>
					</div>
				</div>
				<div class="card-body msg_card_body" id="current-chat">

					<input type="hidden" id="current-user" value="@Model.CurrentUserName" />
					<input type="hidden" id="current-user-img" value="@Model.CurrentUserImg" />
					<input type="hidden" id="group-name" value="@Model.GroupName" />

